<!DOCTYPE html>
<html lang="en">
<head>
    <title>Daily View: <%= date %> - Loan Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header class="header">
        <div class="header-content">
            <h1 class="site-title"><img src="/images/safedeallogo.png" alt="SAFEDEAL Logo" class="logo">SAFEDEAL CONTRIBUTION</h1>
            <nav class="header-nav">
                <a href="<%= userRole === 'Admin' ? '/' : '/officer-dashboard' %>" class="nav-link">Back to Dashboard</a>
                <span class="logout-wrapper">
                    <a href="/logout" class="logout-btn">üîí Logout</a>
                </span>
            </nav>
        </div>
    </header>
    
    <main class="container">
        <div class="page-header">
            <h1>Daily Payments Log - <%= moment(date).format('MMMM Do, YYYY') %></h1>
        </div>
        
        <!-- Date Navigation Controls -->
        <section class="date-nav-section">
            <div class="date-navigation">
                <a href="/daily/<%= moment(date).subtract(1, 'days').format('YYYY-MM-DD') %>" class="nav-button">‚Üê Previous Day</a>
                <span class="current-date"><%= moment(date).format('dddd, MMMM Do, YYYY') %></span>
                <a href="/daily/<%= moment(date).add(1, 'days').format('YYYY-MM-DD') %>" class="nav-button">Next Day ‚Üí</a>
            </div>
        </section>
        
        <section class="totals-section">
            <p class="total-expected">Total Expected for DUE DATE (<%= date %>): <strong>‚Ç¶<%= totalExpected.toLocaleString() %></strong></p>
            <p class="total-collected">Total Collected for DUE DATE (<%= date %>): <strong>‚Ç¶<%= totalCollected.toLocaleString() %></strong></p>
        </section>

        <% if (userRole === 'Admin' || userRole === 'LoanOfficer') { %>
            <section class="role-section">
                <p class="role-note">You are a <%= userRole %> and can update payments for any date below.</p>
            </section>
        <% } %>

        <section class="table-section">
            <div class="table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Borrower</th>
                            <th>Officer</th>
                            <th>Expected</th>
                            <th>Status</th>
                            <th>Action (Collection Date: <%= moment().format('YYYY-MM-DD') %>)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% dailyData.forEach(item => { %>
                            <% const isPaid = item.payment.paid > 0; %>
                            <% const statusClass = isPaid ? 'status-paid' : 'status-default'; %>
                            
                            <tr class="<%= statusClass %>">
                                <td><%= item.loan.borrower %></td>
                                <td><%= item.loan.officer %></td>
                                <td>‚Ç¶<%= item.payment.expected.toLocaleString() %></td>
                                
                                <td class="<%= statusClass %>">
                                    <%= isPaid ? 'PAID' : (moment().isAfter(item.payment.date, 'day') ? 'SKIPPED' : 'PENDING') %>
                                </td>

                                <td>
                                    <% if (userRole === 'Admin' || userRole === 'LoanOfficer') { %>
                                        <% if (!isPaid) { %>
                                            <!-- MARK PAID BUTTON (FULL AMOUNT) -->
                                            <form action="/daily/mark-paid" method="post" style="display: inline-block;">
                                                <input type="hidden" name="paymentId" value="<%= item.payment._id %>">
                                                <input type="hidden" name="date" value="<%= date %>">
                                                <input type="hidden" name="expectedAmount" value="<%= item.payment.expected %>">
                                                <button type="submit" class="btn-success">üí∞ Mark Paid</button>
                                            </form>
                                        <% } else { %>
                                            <!-- ONLY ADMIN CAN RESET PAYMENT -->
                                            <% if (userRole === 'Admin') { %>
                                                <form action="/daily/mark-unpaid" method="post" style="display: inline-block;">
                                                    <input type="hidden" name="paymentId" value="<%= item.payment._id %>">
                                                    <input type="hidden" name="date" value="<%= date %>">
                                                    <button type="submit" class="btn-warning">Reset/Unpaid</button>
                                                </form>
                                            <% } else { %>
                                                <span class="status-paid">‚úÖ Paid on <%= moment(item.payment.timestamp).format('MMM Do') %></span>
                                            <% } %>
                                        <% } %>
                                    <% } else { %>
                                        <span>No Action</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</body>
</html>