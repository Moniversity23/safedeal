<!DOCTYPE html>
<html lang="en">
<head>
    <title>Daily View: <%= date %> - Loan Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/images/safedeallogo.png" type="image/png">
    <link rel="stylesheet" href="/style.css">
    
</head>
<body>
    <header class="header">
        <div class="header-content">
            <h1 class="site-title"><img src="/images/safedeallogo.png" alt="SAFEDEAL Logo" class="logo">SAFEDEAL CONTRIBUTION</h1>
            <nav class="header-nav">
                <a href="<%= userRole === 'Admin' ? '/' : '/officer-dashboard' %>" class="nav-link">Back to Dashboard</a>
                <span class="logout-wrapper">
                    <a href="/logout" class="logout-btn">üîí Logout</a>
                </span>
            </nav>
        </div>
    </header>
    
    <main class="container">
        <div class="page-header">
            <h1>Daily Payments Log - <%= moment(date).format('MMMM Do, YYYY') %></h1>
        </div>
        
        <!-- Date Navigation Controls -->
        <section class="date-nav-section">
            <div class="date-navigation">
                <a href="/daily/<%= moment(date).subtract(1, 'days').format('YYYY-MM-DD') %>" class="nav-button">‚Üê Previous Day</a>
                <form id="dateForm" action="/daily/" method="get" style="display:inline;">
                    <input 
                        type="date" 
                        id="datePicker" 
                        value="<%= moment(date).format('YYYY-MM-DD') %>" 
                        style="padding:6px; border-radius:4px; border:1px solid #ccc;"
                    >
                </form>

                <a href="/daily/<%= moment(date).add(1, 'days').format('YYYY-MM-DD') %>" class="nav-button">Next Day ‚Üí</a>
            </div>
        </section>
        
        <section class="totals-section">
            <p class="total-expected">Total Expected for DUE DATE (<%= date %>): <strong>‚Ç¶<%= totalExpected.toLocaleString() %></strong></p>
            <p class="total-collected">Total Collected for DUE DATE (<%= date %>): <strong>‚Ç¶<%= totalCollected.toLocaleString() %></strong></p>
        </section>

        <% if (userRole === 'Admin' || userRole === 'LoanOfficer') { %>
            <section class="role-section">
                <p class="role-note">You are a <%= userRole %> and can update payments for any date below.</p>
            </section>
        <% } %>

        <section class="table-section">
            <input 
                type="text" 
                id="searchInput" 
                placeholder="Search borrower name..." 
                style="margin-bottom: 10px; padding: 8px; width: 100%; border: 1px solid #ccc; border-radius: 4px;"
            >

            <div class="table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>
                                <a href="?sort=borrower&order=<%= sortOrder === 'asc' ? 'desc' : 'asc' %>" style="text-decoration:none;color:inherit;">
                                    Borrower <% if (sortField === 'borrower') { sortOrder === 'asc' ? '‚ñ≤' : '‚ñº'; } %>
                                </a>
                            </th>
                            <% if (userRole === 'Admin') { %>
                                <th>
                                    <a href="?sort=officer&order=<%= sortOrder === 'asc' ? 'desc' : 'asc' %>" style="text-decoration:none;color:inherit;">
                                        Officer <% if (sortField === 'officer') { sortOrder === 'asc' ? '‚ñ≤' : '‚ñº'; } %>
                                    </a>
                                </th>
                            <% } %>
                            <th>Expected</th>
                            <th>Status</th>
                            <th>Action (Collection Date: <%= moment().format('YYYY-MM-DD') %>)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% dailyData.forEach(item => { %>
                            <% const isPaid = item.payment.paid > 0; %>
                            <% const statusClass = isPaid ? 'status-paid' : 'status-default'; %>
                            
                            <tr class="<%= statusClass %>">
                                <td><%= item.loan.borrower %></td>
                                <% if (userRole === 'Admin') { %>
                                    <td><%= item.loan.officer %></td>
                                <% } %>
                                <td>‚Ç¶<%= item.payment.expected.toLocaleString() %></td>
                                
                                <td class="<%= statusClass %>">
                                    <%= isPaid ? 'PAID' : (moment().isAfter(item.payment.date, 'day') ? 'SKIPPED' : 'PENDING') %>
                                </td>

                                <td>
                                    <% if (userRole === 'Admin' || userRole === 'LoanOfficer') { %>
                                        <% if (!isPaid) { %>
                                            <!-- MARK PAID BUTTON (FULL AMOUNT) -->
                                            <form action="/daily/mark-paid" method="post" style="display: inline-block;">
                                                <input type="hidden" name="paymentId" value="<%= item.payment._id %>">
                                                <input type="hidden" name="date" value="<%= date %>">
                                                <input type="hidden" name="expectedAmount" value="<%= item.payment.expected %>">
                                                <button type="submit" class="btn-success">üí∞ Mark Paid</button>
                                            </form>
                                        <% } else { %>
                                            <!-- ONLY ADMIN CAN RESET PAYMENT -->
                                            <% if (userRole === 'Admin') { %>
                                                <form action="/daily/mark-unpaid" method="post" style="display: inline-block;">
                                                    <input type="hidden" name="paymentId" value="<%= item.payment._id %>">
                                                    <input type="hidden" name="date" value="<%= date %>">
                                                    <button type="submit" class="btn-warning">Reset/Unpaid</button>
                                                </form>
                                            <% } else { %>
                                                <span class="status-paid">‚úÖ Paid on <%= moment(item.payment.timestamp).format('MMM Do') %></span>
                                            <% } %>
                                        <% } %>
                                    <% } else { %>
                                        <span>No Action</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>

    <script>
        // Search functionality with DOM ready
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            if (!searchInput) return;
            
            let timeout;
            searchInput.addEventListener('keyup', function() {
                clearTimeout(timeout);
                timeout = setTimeout(function() {
                    const filter = searchInput.value.toLowerCase().trim();
                    const rows = document.querySelectorAll('.data-table tbody tr');
                    rows.forEach(row => {
                        const borrowerCell = row.cells[0]; // Borrower (1st td)
                        const officerCell = row.cells[1]; // Officer (2nd td, if Admin)
                        const borrowerText = borrowerCell ? borrowerCell.textContent.toLowerCase() : '';
                        const officerText = userRole === 'Admin' && officerCell ? officerCell.textContent.toLowerCase() : '';
                        if (borrowerText.includes(filter) || officerText.includes(filter)) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                }, 300); // Debounce for smooth typing
            });
        });
    </script>

</body>
</html>