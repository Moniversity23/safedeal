<!DOCTYPE html>
<html>
<head>
    <title>Customer List</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1>Customer List</h1>
        <a href="/">Back to Dashboard</a>

        <table>
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Loan Officer</th>
                    <th>Principal Amount</th>
                    <th>Remaining Balance</th>
                </tr>
            </thead>
            <tbody>
                <% customers.forEach(customer => { %>
                    <tr>
                        <td><%= customer.borrower %></td>
                        <td><%= customer.officer %></td>
                        <td><%= customer.principal.toFixed(2) %></td>
                        <td><%= customer.remainingBalance.toFixed(2) %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>