<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Dashboard - SAFEDEAL CONTRIBUTION</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#3498db">
    <link rel="icon" href="/images/safedeallogo.png" type="image/png">

    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header class="header">
        <div class="header-content">
            <h1 class="site-title"><img src="/images/safedeallogo.png" alt="SAFEDEAL Logo" class="logo">SAFEDEAL CONTRIBUTION</h1>
            <nav class="header-nav">
                <a href="/" class="nav-link">Dashboard</a>
                <span class="logout-wrapper">
                    <a href="/logout" class="logout-btn">üîí Logout</a>
                </span>
            </nav>
        </div>
    </header>
    
    <main class="container">
        <div class="page-header">
            <h1>Admin Dashboard: Welcome, <%= user.username %> (<%= user.role %>)</h1>
        </div>
        
        <section class="financial-section">
            <h2>üìä Financial Summary</h2>
            <div class="kpi-grid">
                <div class="kpi-card expected-kpi">
                    <h4>Expected Today</h4>
                    <p class="kpi-value">‚Ç¶<%= expectedToday.toLocaleString() %></p>
                </div>
                <div class="kpi-card collected-kpi">
                    <h4>Collected Today</h4>
                    <p class="kpi-value">‚Ç¶<%= collectedToday.toLocaleString() %></p>
                </div>
                <div class="kpi-card disbursed-kpi">
                    <h4>Total Disbursed</h4>
                    <p class="kpi-value">‚Ç¶<%= totalDisbursed.toLocaleString() %></p>
                </div>
                <div class="kpi-card accumulated-kpi">
                    <h4>Accumulated Total Collected</h4>
                    <p class="kpi-value">‚Ç¶<%= accumulatedTotalCollected.toLocaleString() %></p>
                </div>
            </div>
        </section>

        <section class="officer-section">
            <h2>üë• Per-Officer Summary</h2>
            <div class="table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Officer</th>
                            <th>Disbursed</th>
                            <th>Expected Today</th>
                            <th>Collected Today</th>
                            <th>General Collected</th>
                            <th>Commission Rate</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% officersSummary.forEach(summary => { %>
                            <tr>
                                <td><%= summary.officer %></td>
                                <td>‚Ç¶<%= summary.disbursed.toLocaleString() %></td>
                                <td>‚Ç¶<%= summary.expectedToday.toLocaleString() %></td>
                                <td>‚Ç¶<%= summary.collectedToday.toLocaleString() %></td>
                                <td>‚Ç¶<%= summary.generalCollected.toLocaleString() %></td>
                                <td><%= (summary.rate * 100) %>%</td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </section>

        <section class="tools-section">
            <h2>üîß Admin Tools</h2>
            <nav class="tools-nav">
                <a href="/users/manage" class="tool-btn">üë• Manage Users</a>
                <a href="/loans" class="tool-btn">üí∞ Manage Loans</a>
                <a href="/daily/<%= today %>" class="tool-btn">üìÖ View Today's Payments</a>
                <a href="/customers" class="tool-btn">üë§ Customer List</a>
                <a href="/biweekly-flexible" class="tool-btn">üìä Bi-Weekly Summary</a>
                <form action="/daily/clear-today" method="POST" onsubmit="return confirmClear()">
                <button type="submit" class="tool-btn danger-btn">üßπ Clear Payments Marked Today</button>
                 </form>

                <form action="/admin/reset-payments" method="POST" style="margin: 20px 0;" onsubmit="return confirm('‚ö†Ô∏è This will RESET ALL payment records (paid=0, skipped=false, etc.). Are you sure?');">
                <button type="submit" class="btn btn-warning">Reset All Payments</button>
                </form>


           

            </nav>
        </section>

        <div class="loan-chart-section">
        <h3>Weekly Repayment Progress</h3>
        <canvas id="loanChart"></canvas>
        </div>

        <script>
        if ("serviceWorker" in navigator) {
            navigator.serviceWorker
            .register("/service-worker.js")
            .then(() => console.log("‚úÖ SAFEDEAL Advanced PWA active"))
            .catch((err) => console.log("Service Worker Error:", err));
        }
        </script>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
        const ctx = document.getElementById('loanChart');
        new Chart(ctx, {
            type: 'bar',
            data: {
            labels: ['Week 1', 'Week 2', 'Week 3'],
            datasets: [{
                label: 'Repayments',
                data: [5500, 6000, 7000],
                backgroundColor: ['#3498db', '#2ecc71', '#f1c40f']
            }]
            },
            options: {
            plugins: { legend: { display: true } },
            scales: { y: { beginAtZero: true } }
            }
        });
        </script>


    </main>

    <script>
function confirmClear() {
    return confirm("‚ö†Ô∏è Are you sure you want to clear all payments marked today? This action cannot be undone!");
}
</script>

</body>
</html>