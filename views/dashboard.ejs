<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Dashboard - SAFEDEAL CONTRIBUTION</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#3498db">
    <link rel="icon" href="/images/safedeallogo.png" type="image/png">

    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header class="header">
        <div class="header-content">
            <h1 class="site-title"><img src="/images/safedeallogo.png" alt="SAFEDEAL Logo" class="logo">SAFEDEAL CONTRIBUTION</h1>
            <nav class="header-nav">
                <a href="/" class="nav-link">Dashboard</a>
                <span class="logout-wrapper">
                    <a href="/logout" class="logout-btn">ðŸ”’ Logout</a>
                </span>
            </nav>
        </div>
    </header>
    
    <main class="container">
        <div class="page-header">
            <h1>Admin Dashboard: Welcome, <%= user.username %> (<%= user.role %>)</h1>
        </div>
        
        <section class="financial-section">
            <h2>ðŸ“Š Financial Summary</h2>
            <div class="kpi-grid">
                <div class="kpi-card expected-kpi">
                    <h4>Expected Today</h4>
                    <p class="kpi-value">â‚¦<%= expectedToday.toLocaleString() %></p>
                </div>
                <div class="kpi-card collected-kpi">
                    <h4>Collected Today</h4>
                    <p class="kpi-value">â‚¦<%= collectedToday.toLocaleString() %></p>
                </div>
                <div class="kpi-card disbursed-kpi">
                    <h4>Total Disbursed</h4>
                    <p class="kpi-value">â‚¦<%= totalDisbursed.toLocaleString() %></p>
                </div>
                <div class="kpi-card accumulated-kpi">
                    <h4>Accumulated Total Collected</h4>
                    <p class="kpi-value">â‚¦<%= accumulatedTotalCollected.toLocaleString() %></p>
                </div>
            </div>
        </section>

        <section class="officer-section">
            <h2>ðŸ‘¥ Per-Officer Summary</h2>
            <div class="table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Officer</th>
                            <th>Disbursed</th>
                            <th>Expected Today</th>
                            <th>Collected Today</th>
                            <th>General Collected</th>
                            <th>Commission Rate</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% officersSummary.forEach(summary => { %>
                            <tr>
                                <td><%= summary.officer %></td>
                                <td>â‚¦<%= summary.disbursed.toLocaleString() %></td>
                                <td>â‚¦<%= summary.expectedToday.toLocaleString() %></td>
                                <td>â‚¦<%= summary.collectedToday.toLocaleString() %></td>
                                <td>â‚¦<%= summary.generalCollected.toLocaleString() %></td>
                                <td><%= (summary.rate * 100) %>%</td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </section>

        <section class="tools-section">
            <h2>ðŸ”§ Admin Tools</h2>
            <nav class="tools-nav">
                <a href="/users/manage" class="tool-btn">ðŸ‘¥ Manage Users</a>
                <a href="/loans" class="tool-btn">ðŸ’° Manage Loans</a>
                <a href="/daily/<%= today %>" class="tool-btn">ðŸ“… View Today's Payments</a>
                <a href="/customers" class="tool-btn">ðŸ‘¤ Customer List</a>
                <a href="/biweekly-flexible" class="tool-btn">ðŸ“Š Bi-Weekly Summary</a>
            </nav>
        </section>

        <div class="loan-chart-section">
        <h3>Weekly Repayment Progress</h3>
        <canvas id="loanChart"></canvas>
        </div>

        <script>
        if ("serviceWorker" in navigator) {
            navigator.serviceWorker
            .register("/service-worker.js")
            .then(() => console.log("âœ… SAFEDEAL Advanced PWA active"))
            .catch((err) => console.log("Service Worker Error:", err));
        }
        </script>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
        const ctx = document.getElementById('loanChart');
        new Chart(ctx, {
            type: 'bar',
            data: {
            labels: ['Week 1', 'Week 2', 'Week 3'],
            datasets: [{
                label: 'Repayments',
                data: [5500, 6000, 7000],
                backgroundColor: ['#3498db', '#2ecc71', '#f1c40f']
            }]
            },
            options: {
            plugins: { legend: { display: true } },
            scales: { y: { beginAtZero: true } }
            }
        });
        </script>


    </main>
</body>
</html>